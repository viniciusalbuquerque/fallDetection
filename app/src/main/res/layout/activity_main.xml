<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="poli.upe.com.br.falldetection.MainActivity"
    android:gravity="center">

    <TextView
        android:id="@+id/main_textview_acelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:text="Acelerometer"/>

    <TextView
        android:id="@+id/main_textview_gravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_textview_acelerometer"
        android:textColor="@color/colorPrimaryDark"
        android:text="Gravity"/>

    <TextView
        android:id="@+id/main_textview_gyroscope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_textview_gravity"
        android:textColor="@color/colorPrimaryDark"
        android:text="Gyroscope"/>

</RelativeLayout>
